<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:background="@drawable/downcornerconstrain"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".HomeScreen">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="35dp"
        android:background="@drawable/downcornerconstrain">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/upcorner" />



        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/pasport"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/txtUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:text="Abdulraheem Sherif Adavuruku"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_pic" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/downcornerconstrain"
                app:cardCornerRadius="35dp"
                app:contentPadding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtUser">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:padding="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:id="@+id/pname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/load"
                        android:textColor="@color/colorText"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-medium"/>
                    <TextView
                        android:id="@+id/pregno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/load"
                        android:textColor="@color/colorText"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-medium"/>
                    <TextView
                        android:id="@+id/pfaculty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/load"
                        android:textColor="@color/colorText"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-medium"/>
                    <TextView
                        android:id="@+id/pmodetype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/load"
                        android:textColor="@color/colorText"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/pemailphone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/load"
                        android:textColor="@color/colorText"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-medium"/>
                    <TextView
                        android:id="@+id/pstate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/load"
                        android:textColor="@color/colorText"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-medium"/>
                    <TextView
                        android:id="@+id/pcontact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/load"
                        android:textColor="@color/colorText"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/pit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/load"
                        android:textColor="@color/colorBlack"
                        android:lineSpacingExtra="6dp"
                        android:background="@color/loginColor"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-medium"/>
                    <TextView
                        android:id="@+id/pitphoneemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/load"
                        android:textColor="@color/colorText"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-medium"/>
                    <TextView
                        android:id="@+id/pitaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/load"
                        android:textColor="@color/colorText"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="sans-serif-medium"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>
