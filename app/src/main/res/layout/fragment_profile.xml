<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".profile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fairwhite">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/pinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="2dp"
                    app:layout_anchorGravity="bottom"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardUseCompatPadding="true"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="5dp"
                    android:clickable="true"
                    card_view:cardBackgroundColor="@android:color/white">
                    
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/touch_selector"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/s"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PERSONAL NFORMATION"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="sans-serif-medium"/>
                        <TextView
                            android:id="@+id/pname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/load"
                            android:textColor="@color/colorText"
                            android:lineSpacingExtra="6dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="sans-serif-medium"/>
                        <TextView
                            android:id="@+id/pregno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/load"
                            android:textColor="@color/colorText"
                            android:lineSpacingExtra="6dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="sans-serif-medium"/>
                        <TextView
                            android:id="@+id/pfaculty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/load"
                            android:textColor="@color/colorText"
                            android:lineSpacingExtra="6dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="sans-serif-medium"/>
                        <TextView
                            android:id="@+id/pmodetype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/load"
                            android:textColor="@color/colorText"
                            android:lineSpacingExtra="6dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:id="@+id/pemailphone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/load"
                            android:textColor="@color/colorText"
                            android:lineSpacingExtra="6dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="sans-serif-medium"/>
                        <TextView
                            android:id="@+id/pcontact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/load"
                            android:textColor="@color/colorText"
                            android:lineSpacingExtra="6dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/supervisor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="2dp"
                    app:layout_anchorGravity="bottom"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardUseCompatPadding="true"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="5dp"
                    android:clickable="true"
                    card_view:cardBackgroundColor="@android:color/white">
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/touch_selector"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/stitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SUPERVISOR INFORMATION"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"

                            android:fontFamily="sans-serif-medium"/>
                        <TextView android:id="@+id/sname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/load"
                            android:textColor="@color/colorText"
                            android:lineSpacingExtra="6dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:id="@+id/sfaculty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/load"
                            android:textColor="@color/colorText"
                            android:lineSpacingExtra="6dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:id="@+id/semailphone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/load"
                            android:textColor="@color/colorText"
                            android:layout_marginBottom="5dp"
                            android:lineSpacingExtra="6dp"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="2dp"
                    app:layout_anchorGravity="bottom"
                    app:cardCornerRadius="5dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="5dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="390dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/touch_selector"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/ctitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="IT PLACEMENT INFORMATION"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/cname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="sans-serif-medium"
                            android:lineSpacingExtra="6dp"
                            android:text="@string/load"
                            android:textColor="@color/colorText" />

                        <TextView
                            android:id="@+id/cemailphone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="sans-serif-medium"
                            android:lineSpacingExtra="6dp"
                            android:text="@string/load"
                            android:textColor="@color/colorText" />

                        <TextView
                            android:id="@+id/cstatelgov"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="sans-serif-medium"
                            android:lineSpacingExtra="6dp"
                            android:text="@string/load"
                            android:textColor="@color/colorText" />

                        <TextView
                            android:id="@+id/ccontact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="sans-serif-medium"
                            android:lineSpacingExtra="6dp"
                            android:text="@string/load"
                            android:textColor="@color/colorText" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/itinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="2dp"
                    app:layout_anchorGravity="bottom"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardUseCompatPadding="true"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="5dp"
                    android:clickable="true"
                    card_view:cardBackgroundColor="@android:color/white">
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/touch_selector"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/ititle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="IT INFORMATION"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="sans-serif-medium"/>
                        <TextView android:id="@+id/istart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="@string/load"
                            android:textColor="@color/colorText"
                            android:lineSpacingExtra="6dp"
                            android:fontFamily="sans-serif-medium"/>
                        <TextView
                            android:id="@+id/iend"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/load"
                            android:textColor="@color/colorText"
                            android:lineSpacingExtra="6dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:id="@+id/ileft"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="@string/load"
                            android:textColor="@color/colorBlack"
                            android:lineSpacingExtra="6dp"
                            android:fontFamily="sans-serif-medium"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>